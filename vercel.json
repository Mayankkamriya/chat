{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "front-end/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/app.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "front-end/dist/index.html" }
  ],
  "buildCommand": "cd front-end && npm run build",
  "installCommand": "cd front-end && npm install"
}