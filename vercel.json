{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "server/app.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/front-end/dist/$1" 
    }
  ],
  "installCommand": "npm install && cd front-end && npm install",
  "buildCommand": "cd front-end && npm run build"
}